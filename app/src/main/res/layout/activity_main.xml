<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context="com.example.rima.lnguagem.MainActivity">
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="88dp"
      android:background="@color/numbersCatagory">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/numbersCatagory"
        android:id="@+id/numbers"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="Numbers"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        />
  </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/familyCatagory">
    <TextView
        android:id="@+id/family"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/familyCatagory"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="Family Members"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/colorsCatagory">
    <TextView
        android:id="@+id/colors"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:background="@color/colorsCatagory"
        android:padding="16dp"
        android:text="Colors"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/phrasesCatagory">
    <TextView
        android:id="@+id/phrases"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/phrasesCatagory"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="Phrases"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold" />
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:text="Learning is Fun"
        android:textColor="#9e9e9e"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>